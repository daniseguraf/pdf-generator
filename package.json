{
  "name": "my-buildings",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "pnpm": {
    "engine-strict": true
  },
  "main": "index.js",
  "scripts": {
    "dev": "pnpm --color run -r dev",
    "dev:frontend": "pnpm --filter @pdf-generator/frontend dev",
    "dev:backend": "pnpm --filter @pdf-generator/backend dev",
    "build": "pnpm --color run -r build",
    "build:backend": "pnpm --filter @pdf-generator/backend build",
    "build:frontend": "pnpm --filter @pdf-generator/frontend build",
    "lint": "pnpm --color run -r lint",
    "format": "prettier --write packages/*/src/**/*.{ts,tsx} packages/backend/prisma/**/*.prisma"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.23.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.7.2",
    "prettier-plugin-prisma": "^5.0.0"
  }
}
