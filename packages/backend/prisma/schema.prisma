generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Building {
  id           Int          @id @default(autoincrement())
  name         String
  description  String?      @db.Text
  yearBuilt    Int?
  propertyType PropertyType @default(RESIDENTIAL)

  // Address
  street     String?
  avenue     String?
  number     String
  district   String
  city       String
  province   String
  postalCode String?

  floors      Int
  commonAreas CommonArea[]
  staff       Staff[]

  // Contact
  phoneNumber String?
  email       String? @unique

  // Metadata
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("buildings")
}

model CommonArea {
  id         Int       @id @default(autoincrement())
  Building   Building? @relation(fields: [buildingId], references: [id])
  buildingId Int?

  @@map("commonAreas")
}

model Staff {
  id         Int       @id @default(autoincrement())
  Building   Building? @relation(fields: [buildingId], references: [id])
  buildingId Int?

  @@map("staff")
}

enum PropertyType {
  RESIDENTIAL
  COMMERCIAL
  MIXED
}
